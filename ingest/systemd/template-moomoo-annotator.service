[Unit]
Description=Moomoo Annotator Daemon
After=docker.service
Requires=docker.service

[Service]
Type=simple
User={WHOAMI}
WorkingDirectory={MOOMOO_INGEST_PATH}
EnvironmentFile={MOOMOO_INGEST_ENVVFILE}
ExecStart={MOOMOO_ANNOTATOR_DAEMON_LAUNCHER} --no-detach --force-stop --no-restart
Restart=always
RestartSec=5
TimeoutStopSec=40

# Graceful stop
ExecStop=/usr/bin/docker stop -t 30 moomoo-annotator-daemon-latest

[Install]
WantedBy=multi-user.target
